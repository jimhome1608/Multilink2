


@Html.DevExpress().GridView(settings =>
{
    settings.Name = "gvTypedListDataBinding";
    settings.CallbackRouteValues = new { Controller = "Home", Action = "vwInternetEnquiriesPartial" };

    settings.KeyFieldName = "address";

    settings.Columns.Add("address");
    settings.Columns[0].Caption = "Property";
    settings.Columns[0].FooterCellStyle.HorizontalAlign = HorizontalAlign.Right;


    settings.Columns.Add("total_count");
    settings.Columns[1].Caption = "Enquires";
    settings.Columns[1].HeaderStyle.HorizontalAlign = HorizontalAlign.Right;

    settings.Columns.Add("rea_count");
    settings.Columns[2].Caption = "RealEstate";
    settings.Columns[2].HeaderStyle.HorizontalAlign = HorizontalAlign.Right;

    settings.Columns.Add("dca_count");
    settings.Columns[3].Caption = "Domain";
    settings.Columns[3].HeaderStyle.HorizontalAlign = HorizontalAlign.Right;

    settings.Columns.Add("rvw_count");
    settings.Columns[4].Caption = "RealEstateView";
    settings.Columns[4].HeaderStyle.HorizontalAlign = HorizontalAlign.Right;


    settings.TotalSummary.Add(DevExpress.Data.SummaryItemType.Count, "address");
    settings.TotalSummary[0].DisplayFormat = "<strong>{0}</strong> Current<br />Listings";

    settings.TotalSummary.Add(DevExpress.Data.SummaryItemType.Sum, "total_count");
    settings.TotalSummary[1].DisplayFormat = "<strong>{0}</strong>";
    settings.TotalSummary.Add(DevExpress.Data.SummaryItemType.Average, "total_count");
    settings.TotalSummary[2].DisplayFormat = "Avg: {0:n2}";

    settings.TotalSummary.Add(DevExpress.Data.SummaryItemType.Sum, "rea_count");
    settings.TotalSummary[3].DisplayFormat = "<strong>REA: {0}</strong>";
    settings.TotalSummary.Add(DevExpress.Data.SummaryItemType.Average, "rea_count");
    settings.TotalSummary[4].DisplayFormat = "Avg: {0:n2}";

    settings.TotalSummary.Add(DevExpress.Data.SummaryItemType.Sum, "dca_count");
    settings.TotalSummary[5].DisplayFormat = "<strong>DCA: {0}</strong>";
    settings.TotalSummary.Add(DevExpress.Data.SummaryItemType.Average, "dca_count");
    settings.TotalSummary[6].DisplayFormat = "Avg: {0:n2}";

    settings.TotalSummary.Add(DevExpress.Data.SummaryItemType.Sum, "rvw_count");
    settings.TotalSummary[7].DisplayFormat = "<strong>RVW: {0}</strong>";
    settings.TotalSummary.Add(DevExpress.Data.SummaryItemType.Average, "rvw_count");
    settings.TotalSummary[8].DisplayFormat = "Avg: {0:n2}";

    settings.Styles.Footer.Font.Bold = false;


    //settings.Settings.su
    settings.Settings.ShowFooter = true;

    settings.SettingsPager.Visible = false;
    settings.Settings.ShowGroupPanel = false;
    settings.Settings.ShowFilterRow = false;
    settings.SettingsBehavior.AllowSelectByRowClick = true;
    settings.Width = System.Web.UI.WebControls.Unit.Percentage(98);
    settings.Height = System.Web.UI.WebControls.Unit.Percentage(100);
    settings.Settings.ShowVerticalScrollBar = true;
    settings.SettingsPager.Mode = GridViewPagerMode.ShowAllRecords;
    settings.ClientSideEvents.Init = "OnInit";
    settings.ClientSideEvents.EndCallback = "OnEndCallback";
    settings.HtmlFooterCellPrepared =  (sender, e) =>
    {
        e.Cell.BackColor = System.Drawing.Color.LightYellow;
        e.Cell.ForeColor = System.Drawing.Color.Black;
    };


}).Bind(Model).GetHtml()