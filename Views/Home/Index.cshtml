@using Multilink2.Models;
@model InternetEnquiresList

@*<link rel="stylesheet" href="http://www.multilink.com.au/webmultilink/assets/default/lib/jquery.tablesorter/themes/multilink/style.css?ver=4.4.10">*@
<script src="~/Scripts/jquery-1.8.0.min.js"></script>
<style>
    table.sortable thead {
        background-color: #eee;
        color: #666666;
        font-weight: bold;
        cursor: default;
        text-align:left;
        font-family:Calibri;
        font-size:14pt
    }
</style>
<div class="panel panel-default" style="background-color:teal;font-size:medium;color:white;font-family:Calibri;font-size:14pt">
    <div class="panel-body">
         Web Enquiries (@Html.DisplayFor(m => m.count))&nbsp;&nbsp;&nbsp;&nbsp;
        <input id="searchInput2" type="search" class="light-table-filter" data-table="order-table" placeholder="Quick search">
    </div>
</div>

<div class="table-responsive">
    <table overflow auto; class="table order-table table-striped table-bordered table-hover sortable" id="current-property-listing-table" width="100%">
        <thead>
            <tr>
                <!-- print custome columns -->
                <th class="text-left">&nbsp;Address</th>
                <th class="text-left">&nbsp;Total<br />Enquires</th>
                <th class="text-left">&nbsp;RealEstate<br />(REA)</th>
                <th class="text-left">&nbsp;Domain</th>
                <th class="text-left">&nbsp;RealEstateView</th>
            </tr>
        </thead>
        <tbody id="fbody3">
            @foreach (var record in Model.items)
            {
                <tr>
                    <td>@record.address</td>
                    <td>@record.count</td>
                    <td>0</td>
                    <td>0</td>
                    <td>0</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script src="~/Scripts/sorttable.js"></script>

<script>

    $("#searchInput2").keyup(function () {

        $.expr[":"].contains = $.expr.createPseudo(function (arg) {
            return function (elem) {
                return $(elem).text().toUpperCase().indexOf(arg.toUpperCase()) >= 0;
            };
        });


    var rows = $("#fbody3").find("tr").hide();
	var data = this.value.split(" ");
	$.each(data, function(i, v) {
		rows.filter(":contains('" + v + "')").show();
	});
});
</script>